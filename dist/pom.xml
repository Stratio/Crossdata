<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.stratio.crossdata</groupId>
        <artifactId>parent</artifactId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>

    <artifactId>dist</artifactId>
    <version>1.2.0-SNAPSHOT</version>

    <build>
        <plugins>
            <!-- Get the server and shell jars -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>

                <version>1.7</version>
                <executions>
                    <execution>
                        <id>copy PLUGINS DRIVER</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target name="copy folders">
                                <copy todir="target/appassembler/repo/shell">
                                    <fileset dir="../driver/target/" includes="*.jar" />
                                </copy>
                                <copy todir="target/appassembler/repo/server">
                                    <fileset dir="../server/target" includes="**/*.jar" />
                                    <mapper type="flatten" />
                                </copy>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>



            <!-- SERVER -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.10</version>
                <configuration>
                    <platforms>
                        <platform>unix</platform>
                    </platforms>
                    <binFileExtensions>
                        <unix>.sh</unix>
                    </binFileExtensions>
                    <configurationSourceDirectory>src/main/resources</configurationSourceDirectory>
                    <configurationDirectory>:/etc/sds/crossdata</configurationDirectory>
                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                    <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                    <filterConfigurationDirectory>true</filterConfigurationDirectory>
                    <assembleDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}</assembleDirectory>
                    <extraJvmArguments>$CROSSDATA_JAVA_OPTS</extraJvmArguments>
                    <licenseHeaderFile>src/main/include/LICENSE</licenseHeaderFile>
                    <binFolder>bin</binFolder>
                    <repositoryName>lib</repositoryName>
                    <unixScriptTemplate>${project.basedir}/src/main/templates/server-script.sh</unixScriptTemplate>
                    <programs>
                        <program>
                            <mainClass>com.stratio.crossdata.server.CrossdataApplication</mainClass>
                            <name>server</name>
                        </program>
                        <program>
                            <mainClass>com.stratio.crossdata.driver.shell.BasicShell</mainClass>
                            <name>shell</name>
                        </program>
                    </programs>
                </configuration>

                <executions>

                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>



    <profiles>
        <profile>
            <id>package</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.stratio.mojo.unix</groupId>
                        <artifactId>unix-maven-plugin</artifactId>
                        <version>1.1.6</version>
                        <extensions>true</extensions>
                        <inherited>false</inherited>
                        <configuration>
                            <outputFileName>stratio-crossdata</outputFileName>
                            <contact>
                                <![CDATA[Stratio Crossdata<crossdata@stratio.com>]]>
                            </contact>
                            <contactEmail>crossdata@stratio.com</contactEmail>
                            <deb>
                                <section>devel</section>
                                <depends>lockfile-progs</depends>
                            </deb>
                            <rpm>
                                <group>devel</group>
                                <requires>bash</requires>
                            </rpm>
                            <excludeDirectoryAttributes>
                                <dir>/etc</dir>
                                <dir>/etc/default</dir>
                                <dir>/etc/init.d</dir>
                                <dir>/var</dir>
                                <dir>/var/run</dir>
                                <dir>/var/log</dir>
                                <dir>/opt</dir>
                            </excludeDirectoryAttributes>
                            <defaults>
                                <directoryAttributes>
                                    <user>crossdata</user>
                                    <group>stratio</group>
                                    <mode>0775</mode>
                                </directoryAttributes>
                                <fileAttributes>
                                    <user>crossdata</user>
                                    <group>stratio</group>
                                    <mode>0664</mode>
                                </fileAttributes>
                            </defaults>
                            <assembly>
                                <mkdirs>
                                    <path>/etc/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/log/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/log/sds/crossdata</path>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/run/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/opt/sds</path>
                                    <attributes>
                                        <user>root</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </attributes>
                                </mkdirs>

                                <!--<copyDirectory>-->
                                    <!--<from>src/main/templates/shell</from>-->
                                    <!--<to>/opt/sds/crossdata/bin</to>-->
                                <!--</copyDirectory>-->
                                <copyDirectory>
                                    <from>${project.build.directory}/appassembler/repo/server</from>
                                    <to>/opt/sds/crossdata/lib</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>${project.build.directory}/appassembler/repo/shell</from>
                                    <to>/opt/sds/crossdata/lib</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>${project.build.directory}/crossdata-dist-${project.parent.version}/:/etc/sds/crossdata/shell</from>
                                    <to>/etc/sds/crossdata/shell</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>${project.build.directory}/crossdata-dist-${project.parent.version}/:/etc/sds/crossdata/server</from>
                                    <to>/etc/sds/crossdata/server</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>${project.build.directory}/crossdata-dist-${project.parent.version}/bin</from>
                                    <to>/opt/sds/crossdata/bin</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>src/main/unix/files_and_dirs/bin</from>
                                    <to>/opt/sds/crossdata/bin</to>
                                </copyDirectory>

                            </assembly>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deb</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-deb</goal>
                                </goals>
                                <configuration>
                                    <architecture>all</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-driver-variables</path>
                                            <toFile>/etc/default/crossdata-driver-variables</toFile>
                                            <attributes>
                                                <user>crossdata</user>
                                                <group>stratio</group>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-variables</path>
                                            <toFile>/etc/default/crossdata-variables</toFile>
                                            <attributes>
                                                <user>crossdata</user>
                                                <group>stratio</group>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/init.d/deb/crossdata</path>
                                            <toFile>/etc/init.d/crossdata</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                            <execution>
                                <id>rpm</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-rpm</goal>
                                </goals>
                                <configuration>
                                    <architecture>noarch</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-variables</path>
                                            <toFile>/etc/default/crossdata-variables</toFile>
                                            <attributes>
                                                <user>crossdata</user>
                                                <group>stratio</group>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/init.d/rpm/crossdata</path>
                                            <toFile>/etc/init.d/crossdata</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    
</project>