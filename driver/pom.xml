<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>parent_2.10</artifactId>
        <groupId>com.stratio.crossdata</groupId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>

    <artifactId>crossdata-driver_2.10</artifactId>
    <name>Driver</name>
    <description>Driver for Crossdata in order to communicate with the Crossdata Servers</description>
    <packaging>jar</packaging>
    <url>http://stratio.github.io/crossdata/</url>

    <dependencies>
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-common_${scala.binary.version}</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-cluster_${scala.binary.version}</artifactId>
            <version>${akka.version}</version>
        </dependency>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-contrib_${scala.binary.version}</artifactId>
            <version>${akka.version}</version>
        </dependency>
        <dependency>
            <groupId>com.typesafe.akka</groupId>
            <artifactId>akka-slf4j_${scala.binary.version}</artifactId>
            <version>${akka.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>jline</groupId>
            <artifactId>jline</artifactId>
            <version>2.13</version>
        </dependency>

        <!--TEST-->
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-server_${scala.binary.version}</artifactId>
            <version>${project.parent.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.stratio.crossdata</groupId>
            <artifactId>crossdata-core_${scala.binary.version}</artifactId>
            <version>${project.parent.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>crossdata-dbc</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                        <version>2.4.1</version>
                        <configuration>
                            <shadedArtifactAttached>true</shadedArtifactAttached>
                            <shadedClassifierName>jar-with-dependencies</shadedClassifierName>
                            <minimizeJar>true</minimizeJar>
                            <artifactSet>
                                <includes>
                                    <include>com.stratio.crossdata:crossdata-common_${scala.binary.version}</include>
                                    <include>com.stratio.crossdata:crossdata-driver_${scala.binary.version}</include>
                                    <include>org.apache.spark:spark-catalyst_${scala.binary.version}</include>
                                    <include>com.typesafe.akka:akka-actor_${scala.binary.version}</include>
                                    <include>com.typesafe.akka:akka-cluster_${scala.binary.version}</include>
                                    <include>com.typesafe.akka:akka-contrib_${scala.binary.version}</include>
                                    <include>com.typesafe.akka:akka-remote_${scala.binary.version}</include>
                                    <include>com.typesafe.akka:akka-slf4j_${scala.binary.version}</include>
                                    <include>com.google.guava:guava</include>
                                    <include>io.netty:netty-all</include>
                                    <include>io.netty:netty</include>
                                    <include>com.google.protobuf:protobuf-java</include>
                                    <include>org.slf4j:slf4j-api</include>
                                    <include>org.slf4j:slf4j-log4j12</include>
                                    <include>log4j:log4j:jar</include>
                                    <include>org.scala-lang:scala-library</include>
                                    <include>org.scala-lang:scala-reflect</include>
                                    <include>org.scala-lang:scala-compiler</include>
                                    <include>org.scala-lang:scalap</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>shade</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>package</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>appassembler-maven-plugin</artifactId>
                        <version>1.8</version>
                        <configuration>
                            <configurationSourceDirectory>${project.basedir}/src/main/dist/config</configurationSourceDirectory>
                            <configurationDirectory>conf</configurationDirectory>
                            <copyConfigurationDirectory>true</copyConfigurationDirectory>
                            <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                            <assembleDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}
                            </assembleDirectory>
                            <extraJvmArguments>-Xms512m</extraJvmArguments>
                            <repositoryLayout>flat</repositoryLayout>
                            <generateRepository>true</generateRepository>
                            <licenseHeaderFile>src/main/dist/include/LICENSE</licenseHeaderFile>
                            <repositoryName>lib</repositoryName>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </configuration>
                        <executions>
                            <execution>
                                <id>Assembler-Script</id>
                                <phase>package</phase>
                                <configuration>
                                    <unixScriptTemplate>${project.basedir}/src/main/dist/template/unix-script.sh</unixScriptTemplate>
                                    <programs>
                                        <program>
                                            <mainClass>com.stratio.crossdata.driver.shell.BasicShell</mainClass>
                                            <id>crossdata-driver</id>
                                            <platforms>
                                                <platform>unix</platform>
                                            </platforms>
                                            <jvmSettings>
                                                <systemProperties>
                                                    <systemProperty>log4j.configuration=driver-log.properties</systemProperty>
                                                </systemProperties>
                                            </jvmSettings>
                                        </program>
                                    </programs>
                                </configuration>
                                <goals>
                                    <goal>assemble</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.6</version>
                        <executions>
                            <execution>
                                <id>copy-resources</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/dist/include</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-config</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/crossdata-dist-${project.parent.version}/conf
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/dist/config</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.stratio.mojo.unix</groupId>
                        <artifactId>unix-maven-plugin</artifactId>
                        <version>1.1.6</version>
                        <extensions>true</extensions>
                        <inherited>false</inherited>
                        <configuration>
                            <contact><![CDATA[Stratio <crossdata@stratio.com>]]></contact>
                            <contactEmail>crossdata@stratio.com</contactEmail>
                            <outputFileName>stratio-crossdata-shell</outputFileName>
                            <rpm>
                                <group>stratio</group>
                                <requires>bash</requires>
                            </rpm>
                            <deb>
                                <section>devel</section>
                            </deb>
                            <excludeDirectoryAttributes>
                                <dir>/etc</dir>
                                <dir>/etc/init.d</dir>
                                <dir>/etc/default</dir>
                                <dir>/var</dir>
                                <dir>/var/log</dir>
                                <dir>/opt</dir>
                                <dir>/usr</dir>
                                <dir>/bin</dir>
                            </excludeDirectoryAttributes>
                            <defaults>
                                <directoryAttributes>
                                    <user>stratio</user>
                                    <group>stratio</group>
                                    <mode>0775</mode>
                                </directoryAttributes>
                                <fileAttributes>
                                    <user>stratio</user>
                                    <group>stratio</group>
                                    <mode>0664</mode>
                                </fileAttributes>
                            </defaults>
                            <assembly>
                                <mkdirs>
                                    <paths>
                                        <path>etc/sds/crossdata-shell</path>
                                        <path>var/run/sds</path>
                                        <path>var/sds/crossdata-shell</path>
                                        <path>/var/lock/subsys</path>
                                        <path>/var/log/sds/crossdata-shell</path>
                                    </paths>
                                    <attributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                        <mode>775</mode>
                                    </attributes>
                                </mkdirs>
                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/conf/</from>
                                    <to>/etc/sds/crossdata-shell</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/bin</from>
                                    <to>/opt/sds/crossdata-shell/bin</to>
                                    <!-- afects all files on this directory -->
                                    <fileAttributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                        <mode>0775</mode>
                                    </fileAttributes>
                                </copyDirectory>

                                <copyDirectory>
                                    <from>target/crossdata-dist-${project.version}/lib</from>
                                    <to>/opt/sds/crossdata-shell/lib</to>
                                </copyDirectory>

                            </assembly>
                        </configuration>
                        <executions>
                            <execution>
                                <id>create-rpm</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-rpm</goal>
                                </goals>
                                <configuration>
                                    <architecture>noarch</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/dist/config/driver-application.conf</path>
                                            <toFile>/etc/sds/crossdata-shell/driver-application.conf</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/crossdata-env.sh</path>
                                            <toFile>/etc/sds/crossdata-shell/crossdata-env.sh</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/driver-log.properties</path>
                                            <toFile>/etc/sds/crossdata-shell/driver-log.properties</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/include/README.rst</path>
                                            <toFile>/opt/sds/crossdata-shell/README.rst</toFile>
                                            <attributes>
                                                <user>stratio</user>
                                                <group>stratio</group>
                                                <mode>644</mode>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/LICENSE</path>
                                            <toFile>/opt/sds/crossdata-shell/LICENSE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/NOTICE</path>
                                            <toFile>/opt/sds/crossdata-shell/NOTICE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-driver-variables</path>
                                            <toFile>/etc/default/crossdata-driver-variables</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                            <execution>
                                <id>create-deb</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-deb</goal>
                                </goals>
                                <configuration>
                                    <architecture>all</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>src/main/dist/config/driver-application.conf</path>
                                            <toFile>/etc/sds/crossdata-shell/driver-application.conf</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/crossdata-env.sh</path>
                                            <toFile>/etc/sds/crossdata-shell/crossdata-env.sh</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/config/driver-log.properties</path>
                                            <toFile>/etc/sds/crossdata-shell/driver-log.properties</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/dist/include/README.rst</path>
                                            <toFile>/opt/sds/crossdata-shell/README.rst</toFile>
                                            <attributes>
                                                <user>stratio</user>
                                                <group>stratio</group>
                                                <mode>644</mode>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/LICENSE</path>
                                            <toFile>/opt/sds/crossdata-shell/LICENSE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>target/crossdata-dist-${project.version}/NOTICE</path>
                                            <toFile>/opt/sds/crossdata-shell/NOTICE</toFile>
                                        </copyFile>
                                        <copyFile>
                                            <path>src/main/unix/files_and_dirs/etc/default/crossdata-driver-variables</path>
                                            <toFile>/etc/default/crossdata-driver-variables</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>
</project>
